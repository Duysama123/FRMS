<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Step</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to steps_path, class: button_class(theme: "transparent") do %>
      All Steps
      <% end %>
      <%= link_to edit_step_path(@step), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Recipe:</p>
        <p><%= @step.recipe.title %></p>
      </li>
      <li>
        <p class="font-semibold">Position:</p>
        <p><%= @step.position %></p>
      </li>
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @step.name %></p>
      </li>
      <li>
        <p class="font-semibold">Instruction:</p>
<% if @step.instruction.present? %>
  <ol style="list-style-type: decimal; padding-left: 16px;">
    <% @step.instruction.split("\n").each do |line| %>
      <% if line.strip.present? %>
        <li><%= line.strip %></li>
      <% end %>
    <% end %>
  </ol>
<% else %>
  <p>No instruction available for this step.</p>
<% end %>
        </p>
      </li>
       <li>
        <p class="font-semibold">Image:</p>
        <% if @step.image.attached? %>
          <%= image_tag url_for(@step.image), alt: @step.name, style: "max-width: 300px; height: auto; object-fit: cover; border-radius: 8px;" %>
        <% else %>
          <p>No image available</p>
        <% end %>
      </li>
      
  </ul>
</div>
