<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Recipe Category</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to recipe_categories_path, class: button_class(theme: "transparent") do %>
      All Recipe Categories
      <% end %>
      <%= link_to edit_recipe_category_path(@recipe_category), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Recipe:</p>
        <p><%= @recipe_category.recipe.title %></p>
      </li>
      <li>
        <p class="font-semibold">Category:</p>
        <p><%= @recipe_category.category.name %></p>
      </li>
  </ul>
</div>
