<div id="<%= dom_id ingredient %>">
  <p>
    <strong>Name:</strong>
    <%= ingredient.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= ingredient.description %>
  </p>

  <p>
    <strong>Image:</strong>
    <% if ingredient.image.attached? %>
      <%= image_tag url_for(ingredient.image), alt: ingredient.name, class: "your-css-class" %>
    <% else %>
      No image available
    <% end %>
  </p>
</div>

