<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between mb-6 flex-wrap">
    <h1 class="font-bold text-3xl mb-6">Edit shopping_list</h1>
    <% if @shopping_list.persisted? %>
    <%= button_to 'Destroy', @shopping_list, method: :delete, class: "text-red-700 underline", data: { turbo_confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <%= render 'form', shopping_list: @shopping_list %>
</div>
